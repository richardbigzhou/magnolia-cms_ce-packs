<?xml version="1.0" encoding="UTF-8"?>
<component>
  <fileSets>
    <!-- unpacked tomcat -->
    <fileSet>
      <directory>target/extracted-tomcat/apache-tomcat-5.5.27</directory>
      <outputDirectory>apache-tomcat-5.5.27</outputDirectory>
      <excludes>
        <!-- if we wanted to only exclude specific default webapps, the trailing slash is needed :
        <exclude>webapps/balancer/</exclude>
        <exclude>webapps/jsp-examples/</exclude>
        <exclude>webapps/servlets-examples/</exclude>
        <exclude>webapps/tomcat-docs/</exclude>
        <exclude>webapps/webdav/</exclude> -->
        <!-- otherwise, we just exclude everything, since we're replacing the ROOT app anyway: -->
        <exclude>webapps/**/*</exclude>
        <!-- exclude .sh scripts which we include below with a specific fileMode -->
        <exclude>bin/*.sh</exclude>
      </excludes>
    </fileSet>

    <!-- our tomcat customisations -->
    <fileSet>
      <directory>src/release/tomcat</directory>
      <outputDirectory>apache-tomcat-5.5.27</outputDirectory>
    </fileSet>

    <!-- making all .sh files executable : -->
    <fileSet>
      <directory>target/extracted-tomcat/apache-tomcat-5.5.27/bin/</directory>
      <outputDirectory>apache-tomcat-5.5.27/bin</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>754</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/release/tomcat/bin</directory>
      <outputDirectory>apache-tomcat-5.5.27/bin</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>754</fileMode>
    </fileSet>

    <!-- readme, license, etc -->
    <fileSet>
      <directory>src/release/bundle</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
    </fileSet>
    <fileSet>
      <directory>target/maven-shared-archive-resources</directory>
      <outputDirectory></outputDirectory>
      <!-- filtering here is probably redundant -->
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
    </fileSet>
  </fileSets>

  <dependencySets>
    <!-- two copies of the webapp -->
    <dependencySet>
      <outputDirectory>apache-tomcat-5.5.27/webapps/magnoliaAuthor</outputDirectory>
      <includes>
        <include>info.magnolia:magnolia-bundled-webapp</include>
      </includes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>

    <dependencySet>
      <outputDirectory>apache-tomcat-5.5.27/webapps/magnoliaPublic</outputDirectory>
      <includes>
        <include>info.magnolia:magnolia-bundled-webapp</include>
      </includes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>

    <!-- add-on packages -->
    <dependencySet>
      <outputDirectory>add-ons</outputDirectory>
      <includes>
        <!-- we only include (and unpack) dependencies of type tar.gz -->
        <include>info.magnolia:*:tar.gz</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
    <!-- for single jar add-ons, if needed:
    <dependencySet>
      <outputDirectory>add-ons</outputDirectory>
      <includes>
        <include>info.magnolia:*:jar</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>false</unpack>
    </dependencySet>
    -->
  </dependencySets>
</component>
